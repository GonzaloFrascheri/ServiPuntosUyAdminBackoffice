@if (Model == null)
{
    <div style="color:red;font-weight:bold;">El modelo es NULL (debug)</div>
    <a href="/Station/Index">Volver</a>
}
else
{
    <h2>Eliminar Estación</h2>
    <p>¿Seguro que deseas eliminar la estación con dirección <b>@Model.Address</b>?</p>
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="/Station/Index" class="btn btn-secondary">Cancelar</a>
    </form>
}
