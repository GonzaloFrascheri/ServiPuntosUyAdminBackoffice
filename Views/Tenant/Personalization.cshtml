@model ServiPuntosUyAdmin.Models.TenantUIConfig
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tenantId = ViewBag.TenantId;
}

<h2>Personalizaci√≥n de Cadena</h2>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@using (Html.BeginForm("Personalization", "Tenant", new { id = tenantId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Logo (URL)</label>
        @Html.TextBoxFor(m => m.ImgUrl, new { @class = "form-control", placeholder = "URL de logo" })
    </div>
    <div class="form-group">
        <label>Color Primario</label>
        @Html.TextBoxFor(m => m.PrimaryColor, new { @class = "form-control", placeholder = "#color o nombre" })
    </div>
    <div class="form-group">
        <label>Color Secundario</label>
        @Html.TextBoxFor(m => m.SecondaryColor, new { @class = "form-control", placeholder = "#color o nombre" })
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a href="/Tenant/Index" class="btn btn-secondary">Cancelar</a>
}
