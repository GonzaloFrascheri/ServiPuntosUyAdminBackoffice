@model ServiPuntosUyAdmin.Models.Tenant
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Cadena (Tenant)</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label>Nombre</label>
        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Esquema Color</label>
        @Html.TextBoxFor(m => m.EsquemaColor, new { @class = "form-control", type = "color", required = "required" })
        @Html.ValidationMessageFor(m => m.EsquemaColor, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Logo URL</label>
        @Html.TextBoxFor(m => m.LogoUrl, new { @class = "form-control", placeholder = "https://..." })
        @Html.ValidationMessageFor(m => m.LogoUrl, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Activo</label>
        @Html.CheckBoxFor(m => m.Activo)
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a href="/Tenant/Index" class="btn btn-secondary">Cancelar</a>
}