@model IEnumerable<ServiPuntosUyAdmin.Models.Promotion>
@using System.Linq
@{
  Layout = "_Layout";
}

<h2>Ofertas de Mi Estación</h2>
@if (TempData["Error"] != null)
{
  <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table mt-3">
  <thead> … tus columnas … </thead>
  <tbody>
    @* Siempre protegemos contra Model == null *@
    @foreach(var o in Model ?? Enumerable.Empty<ServiPuntosUyAdmin.Models.Promotion>())
    {
      <tr>
        <td>@o.Description</td>
        <td>@o.Price.ToString("C")</td>
        <td>@o.StartDate:g</td>
        <td>@o.EndDate:g</td>
      </tr>
    }
  </tbody>
</table>
