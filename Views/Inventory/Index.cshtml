@model IEnumerable<ServiPuntosUyAdmin.Models.BranchProduct>
@{
    Layout = "_Layout";
}

<h2>Inventario Local</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success" id="successMsg">@TempData["Success"]</div>
    <script>
        setTimeout(() => {
            const el = document.getElementById('successMsg');
            if (el) el.style.display = 'none';
        }, 3000);
    </script>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" id="errorMsg">@TempData["Error"]</div>
    <script>
        setTimeout(() => {
            const el = document.getElementById('errorMsg');
            if (el) el.style.display = 'none';
        }, 4000);
    </script>
}
<table class="table">
  <thead>
    <tr>
      <th>ProductId</th>
      <th>Nombre</th>
      <th>Stock</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  @foreach(var item in Model)
  {
    <tr>
      <td>@item.ProductId</td>
      <td>@item.Name</td>
      <td>@item.Stock</td>
      <td>
        <a class="btn btn-sm btn-primary"
           asp-action="Edit"
           asp-route-productId="@item.ProductId"
           asp-route-productName="@item.Name"
           asp-route-quantity="@item.Stock">
          Editar
        </a>
      </td>
    </tr>
  }
  </tbody>
</table>
