@{
    Layout = null;
    var currentUser = "Administrador"; // En el futuro: tomar de sesión
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Admin | ServiPuntos</title>
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<div class="admin-layout">
    <aside class="admin-sidebar">
        <div class="sidebar-header">
            <i class="fa-solid fa-gas-pump"></i>
            <span class="sidebar-title">ServiPuntos</span>
        </div>
        <nav class="sidebar-nav">
            <a class="sidebar-link" href="/Home/Index"><i class="fa-solid fa-chart-line"></i> Dashboard</a>
            <a class="sidebar-link" href="#"><i class="fa-solid fa-users"></i> Usuarios</a>
            <a class="sidebar-link" href="#"><i class="fa-solid fa-gift"></i> Ofertas</a>
            <a class="sidebar-link" href="#"><i class="fa-solid fa-receipt"></i> Transacciones</a>
            <a class="sidebar-link" href="#"><i class="fa-solid fa-cogs"></i> Parámetros</a>
            <a class="sidebar-link" href="#"><i class="fa-solid fa-sign-out-alt"></i> Cerrar sesión</a>
        </nav>
        <div class="sidebar-footer">
            <small>Sesión: @currentUser</small>
        </div>
    </aside>
    <main class="admin-main">
        <header class="admin-main-header">
            <h1>@ViewData["Title"]</h1>
        </header>
        <section class="admin-content">
            @RenderBody()
        </section>
    </main>
</div>
</body>
</html>
