@model ServiPuntosUyAdmin.Models.LoyaltyProgramViewModel
@{
    Layout = "_Layout";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success" id="successMsg">@TempData["Success"]</div>
    <script>
        setTimeout(() => {
            const el = document.getElementById('successMsg');
            if(el) el.style.display = 'none';
        }, 3000);
    </script>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" id="errorMsg">@TempData["Error"]</div>
    <script>
        setTimeout(() => {
            const el = document.getElementById('errorMsg');
            if(el) el.style.display = 'none';
        }, 4000); // el error lo dejamos 4 segundos por ejemplo
    </script>
}

<h2>Editar Programa de Fidelizaci√≥n</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="PointsName"></label>
        <input asp-for="PointsName" class="form-control" />
        <span asp-validation-for="PointsName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PointsValue"></label>
        <input asp-for="PointsValue" class="form-control" type="number"/>
        <span asp-validation-for="PointsValue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AccumulationRule"></label>
        <input asp-for="AccumulationRule" class="form-control" type="number"/>
        <span asp-validation-for="AccumulationRule" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExpiricyPolicyDays"></label>
        <input asp-for="ExpiricyPolicyDays" class="form-control" type="number"/>
        <span asp-validation-for="ExpiricyPolicyDays" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-2">
        Guardar Cambios
    </button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Volver</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
