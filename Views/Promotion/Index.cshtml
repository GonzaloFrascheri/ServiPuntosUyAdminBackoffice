@model IEnumerable<ServiPuntosUyAdmin.Models.Promotion>
@{
  Layout = "_Layout";
}
<h2>Ofertas</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<a class="btn btn-success mb-3"
   asp-controller="Promotion"
   asp-action="Create">
  <i class="fa fa-plus"></i> Nueva Oferta
</a>

<table class="table mt-3">
  <thead>
    <tr>
      <th>Producto</th>
      <th>Descripción</th>
      <th>Precio</th>
      <th>Inicio</th>
      <th>Fin</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var o in Model ?? Enumerable.Empty<ServiPuntosUyAdmin.Models.Promotion>())
    {
      <tr>
        <td>
            @if (o.Products != null && o.Products.Any())
            {
                @string.Join(", ", o.Products)
            }
            else
            {
                <em>—</em>
            }
        </td>
        <td>@o.Description</td>
        <td>@o.Price.ToString("C")</td>
        <td>@o.StartDate</td>
        <td>@o.EndDate</td>
      </tr>
    }
  </tbody>
</table>
